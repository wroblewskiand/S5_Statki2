#: include plane.kv

<Statki>
    canvas.before:
        Color:
            rgb: (0.3, 0.3, 0.3)
        Rectangle
            size: self.width, self.height
            pos: self.x, self.y

    rows: 3

    GridLayout:
        cols: 2
        size_hint: 1, 0.05
        Label:
            color: 0,0,0
            bold: True    
            text: 'Player1'
        Label:
            color: 0,0,0
            bold: True
            text: 'Player2'

    GridLayout:
        cols: 2
        size_hint: 1, 0.9
        Plane:
            id: gracz
        Plane:
            id: przeciwnik  

    
    GridLayout:
        cols: 2
        size_hint: 1, 0.05
        TextInput:
            id: gameId
            multiline: False
        Button:
            bold: True
            text: 'Start'
            id: startGameButton
            on_release: root.startButtonClick()